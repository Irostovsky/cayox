<% unless @user.new_record? || params[:change_password] == "1" || @user.errors.on(:password) || @user.password_change_required? %>
  <p class="indented">
    <%= link_to(_('Change password'), '#', :id => "change_password") %>
  </p>
<% end %>
<div id="password_fields" style="<%= "display: none" unless @user.new_record? || params[:change_password] == "1" || @user.errors.on(:password) || @user.password_change_required? %>">
  <p>
    <%= password_field :password, :label => _("Password") %>
    <%= error_on(@user, :password) %>
  </p>
  <p>
    <%= password_field :password_confirmation, :label => _("Password confirmation") %>
    <%= error_on(@user, :password_confirmation) %>
  </p>
</div>
