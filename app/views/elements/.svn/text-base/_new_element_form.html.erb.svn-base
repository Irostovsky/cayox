<%= form_for @element, :action => resource(@topic, :elements) do %>
  <fieldset>
    <%= partial :element_form %>
    <p class="indented">
      <%= submit _("Add element"), :class => "button" %> <%= _("or") %> <%= link_to(_("Cancel"), resource(@topic), :class => "close") %>
    </p>
  </fieldset>
<% end =%>
